<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- Handler Mapping -->
<bean  class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
  <property name="mappings">
     <props>
        <prop key="home.htm">pvc</prop>
        <prop key="insert.htm">ucoc</prop>
        <prop key="update.htm">ucoc</prop>
        <prop key="delete.htm">ucoc</prop>
        <prop key="find.htm">ucoc</prop>
        <prop key="invalid.htm">ucoc</prop>
     </props>
  </property>
</bean>


<!-- Controller class cfg-->
<bean id="pvc"  class="org.springframework.web.servlet.mvc.ParameterizableViewController">
    <property name="viewName" value="user"/>
</bean>
<bean id="ucoc" class="com.nt.controller.UserCurdOperationsController"/>

  
  <!-- view Resolver cfg -->
  <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
       <property name="prefix" value="/WEB-INF/pages/"/>
       <property name="suffix" value=".jsp"/>
  </bean>
  

</beans>
